<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextFontLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
   <style name="TextFontSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>
    
    <style name="TextFontMediumLV" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="TextFontSmallLV" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="EditTextColors">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#CFD8DC</item>     
        <item name="android:ems">7</item>
    </style>
    
    <style name="SpinnerColors">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:popupBackground">#37474F</item>
    </style>
    
    <!-- http://stackoverflow.com/questions/6159113/android-where-is-the-spinner-widgets-text-color-attribute-hiding
    04/02/2015 -->
    <style name="Theme.Holo.WithColoredSpinners" parent="@android:style/Theme.Holo">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
    </style>
        
</resources>
