<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExpenseListActivity" >

    <TextView
        android:id="@+id/totals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expenselistView"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/add_expense"
        android:layout_toLeftOf="@+id/add_expense"
        android:ems="10"
        android:hint="@string/totals_"
        android:maxLines="7"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" >

    </TextView>

    <ListView
        android:id="@+id/expenselistView"
        android:stackFromBottom="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_expense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:divider="#263238"
        android:dividerHeight="15dp" >
    </ListView>

    <Button
        android:id="@+id/add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/add"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />
        
</RelativeLayout>
