<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditClaimActivity" >

    <TextView
        android:id="@+id/edit_claim_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/edit_claim_destinations"
        android:text="Approval Seeker"
        android:textSize="20sp" />

    <Button
        android:id="@+id/edit_claim_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_claim_name"
        android:text="12/14/1949" />

    <Button
        android:id="@+id/edit_claim_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edit_claim_start_date"
        android:layout_below="@+id/edit_claim_start_date"
        android:text="1/7/1950" />

    <ListView
        android:id="@+id/edit_claim_destinations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_claim_end_date"
        android:layout_alignTop="@+id/edit_claim_name"
        android:layout_toRightOf="@+id/edit_claim_start_date" >

    </ListView>

    <EditText
        android:id="@+id/edit_claim_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edit_claim_destinations"
        android:layout_below="@+id/edit_claim_end_date"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/edit_claim_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Update" />

    <Button
        android:id="@+id/edit_claim_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_claim_update"
        android:layout_alignBottom="@+id/edit_claim_update"
        android:layout_alignRight="@+id/edit_claim_descr"
        android:text="Send for Approval" />

</RelativeLayout>