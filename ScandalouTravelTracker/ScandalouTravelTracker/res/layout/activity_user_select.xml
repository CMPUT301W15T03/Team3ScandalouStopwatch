<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238" >

    <ListView
        android:id="@+id/userSelectUsersLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userSelectCurrentUsersTV"
        android:divider="@drawable/list_view_divider"
        android:dividerHeight="3.5dp" >
    </ListView>

    <Button
        android:id="@+id/userSelectCreateUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:textColor="#F2F2F2"
        android:text="@string/create_user_text" />

    <TextView
        android:id="@+id/userSelectCurrentUsersTV"
    	style="@style/TextFontLarge"
        android:layout_below="@+id/userSelectCreateUserButton"
        android:layout_centerHorizontal="true"
        android:text="@string/current_users_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
