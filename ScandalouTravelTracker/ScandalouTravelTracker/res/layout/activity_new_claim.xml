
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditClaimActivity" >

    <TextView
        android:id="@+id/edit_claim_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/new_claim"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/claimant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_claim_tv"
        android:layout_below="@+id/edit_claim_tv"
        android:ems="10"
        android:hint="@string/claimant_name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/destinations_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tags_tv"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_dest_button"
        android:layout_toRightOf="@+id/tags_sv" >

    </ListView>

    <EditText
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edit_claim_tv"
        android:layout_below="@+id/claimant_name"
        android:ems="10"
        android:focusableInTouchMode="False"
        android:hint="Start date"
        android:inputType="date" />

    <Button
        android:id="@+id/claim_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/add" />

    <ScrollView
        android:id="@+id/tags_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_claim_description"
        android:layout_marginTop="53dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/edit_claim_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_date"
        android:layout_alignRight="@+id/tags_tv"
        android:layout_below="@+id/end_date"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/claimant_name"
        android:layout_toRightOf="@+id/add_dest_button"
        android:ems="10"
        android:focusableInTouchMode="False"
        android:hint="End date"
        android:inputType="date" />

    <ImageButton
        android:id="@+id/add_dest_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_claim_description"
        android:layout_toRightOf="@+id/new_claim_destinations_label"
        android:src="@android:drawable/ic_menu_add"
        />

    <TextView
        android:id="@+id/new_claim_destinations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_dest_button"
        android:layout_alignLeft="@+id/edit_claim_description"
        android:layout_alignTop="@+id/add_dest_button"
        android:gravity="center_vertical"
        android:text="Destinations"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tags_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/claim_ok_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="@string/tags_tv"
        android:inputType="textMultiLine" />

</RelativeLayout>
